    <div class="main-container" >
        <div class="wrapper1" data-aos="fade-up">
            <h1>Heros POP, <br> Collect, Marvel On</h1>

            <p>Explore and collect iconic Marvel heroes in vibrant Funko Pop <br> figures on our specialized platform.</p>
            
            <button id="browseButton">
                <span class="button_top"> Browse <i class="fa-solid fa-arrow-right"></i> </span>
            </button>
        </div>
        <div class="wrapper2" data-aos="fade-up">
            <img src="/images/main.png" alt="">
        </div>
    </div>
    
    <div class="featured">
        <h2>Featured Items</h2>
        <div class="parent-container" id="parent-container">
            <% featuredItems.forEach(function(item) { %>
                <div class="cards" data-aos="fade-up">
                    <img src="<%= item.image %>" alt="">
                    <hr>
                    <p><%= item.title %></p>
                    <p>$<%= item.price %></p>
                    <div class="rating">
                        <% for(let i = 0; i < Math.floor(item.rating); i++) { %>
                            <i class="fa-solid fa-star"></i>
                        <% } %>
                        <% if(item.rating % 1 !== 0) { %>
                            <i class="fa-regular fa-star-half-stroke"></i>
                        <% } %>
                        <% for(let i = Math.ceil(item.rating); i < 5; i++) { %>
                            <i class="fa-regular fa-star"></i>
                        <% } %>
                    </div>
                    <button class="CartBtn">
                        <span class="IconContainer"> 
                            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512" fill="rgb(17, 17, 17)" class="cart"><path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"></path></svg>
                        </span>
                        <p class="text">Add to Cart</p>
                    </button>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="exclusive-collections">
        <div class="what-if">
            <img src="/images/what-if.png">
            <img class="what-if-logo" src="/images/EXCLUSIVE.png">
            <p>
                <b>Unlock the Marvel Multiverse: <br>Grab Your What-If Funko Pop Before Itâ€™s Gone!</b>
            </p>
            <a href="">Shop Collection</a>
        </div>
    </div>

    <div class="review-collections">
        <h2>Marvelous reviews from our customers.</h2>
            <div class="reviews">
                <% reviews.forEach(review => { %>
                    
                  <div class="review-card" data-aos="fade-up">
                    <img src="<%= review.imageUrl %>" alt="<%= review.name %>">
                    <h3><%= review.name %></h3>
